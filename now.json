{
  "name": "roland.codes",
  "alias": "roland.codes",
  "files": ["build"],
  "type": "static",
  "static": {
    "public": "build",
    "trailingSlash": true,
    "cleanUrls": true,
    "directoryListing": false,
    "headers": [
      {
        "source" : "**/*",
        "headers" : [
          {
            "key" : "Content-Security-Policy",
            "value" : "base-uri 'none'; block-all-mixed-content; connect-src 'self' https://api.github.com https://api.segment.io; default-src 'self'; font-src 'self'; form-action 'self'; frame-ancestors 'self'; frame-src 'self' https://codepen.io; img-src *; manifest-src 'self'; media-src 'self'; object-src 'none'; script-src 'self' https://www.google-analytics.com https://cdn.segment.com; style-src 'self' 'unsafe-inline'; upgrade-insecure-requests; worker-src 'self'"
          }, {
            "key" : "Strict-Transport-Security",
            "value" : "max-age=31536000"
          }, {
            "key" : "X-Content-Type-Options",
            "value" : "nosniff"
          }, {
            "key" : "X-Frame-Options",
            "value" : "SAMEORIGIN"
          }, {
            "key" : "X-XSS-Protection",
            "value" : "1; mode=block"
          }
        ]
      }
    ],
    "redirects": [
      { "source": "/feed/", "destination": "/feed.xml" },
      { "source": "/rss.xml", "destination": "/feed.xml" },
      { "source": "/feed.rss", "destination": "/feed.xml" },
      { "source": "/archives/", "destination": "/blog/" },
      { "source": "/about/", "destination": "/#about" },
      { "source": "/projects/", "destination": "/#projects" },
      { "source": "/page:num(\\d+)/", "destination": "/blog/" },

      { "source": "/access-your-localhost-from-inside-a-virtual-machine/", "destination": "/blog/access-your-localhost-from-inside-a-virtual-machine/" },
      { "source": "/host-your-own-website-on-a-github-subdomain/", "destination": "/blog/host-your-own-website-on-a-github-subdomain/" },
      { "source": "/addon-sdk-double-keyboard-events-bug/", "destination": "/blog/addon-sdk-double-keyboard-events-bug/" },
      { "source": "/disable-the-addon-bar-context-menu-on-addon-sdk-widgets/", "destination": "/blog/disable-the-addon-bar-context-menu-on-addon-sdk-widgets/" },
      { "source": "/understanding-git/", "destination": "/blog/understanding-git/" },
      { "source": "/adding-ipv6-support-to-your-server/", "destination": "/blog/adding-ipv6-support-to-your-server/" },
      { "source": "/conditions-for-text-overflow-to-be-applied/", "destination": "/blog/conditions-for-text-overflow-to-be-applied/" },
      { "source": "/introducing-jslinter/", "destination": "/blog/introducing-jslinter/" },
      { "source": "/vmware-to-virtualbox/", "destination": "/blog/vmware-to-virtualbox/" },
      { "source": "/node-boilerplate/", "destination": "/blog/node-boilerplate/" },
      { "source": "/architect-a-javascript-template-editor/", "destination": "/blog/architect-a-javascript-template-editor/" },
      { "source": "/mime-types-demystified/", "destination": "/blog/mime-types-demystified/" },
      { "source": "/github-wiki-sidebars/", "destination": "/blog/github-wiki-sidebars/" },
      { "source": "/controlling-line-breaks/", "destination": "/blog/controlling-line-breaks/" },
      { "source": "/sync-sublime-text-2-settings/", "destination": "/blog/sync-sublime-text-2-settings/" },
      { "source": "/auto-indent-on-paste-in-sublime-text-2/", "destination": "/blog/auto-indent-on-paste-in-sublime-text-2/ " },
      { "source": "/sublime-text-2-script-tag-templates/", "destination": "/blog/sublime-text-2-script-tag-templates/" },
      { "source": "/ubuntu-shutdown-hang/", "destination": "/blog/ubuntu-shutdown-hang/" },
      { "source": "/ie-flex-collapse-bug/", "destination": "/blog/ie-flex-collapse-bug/" },
      { "source": "/legacy-flexbox-invisible-float-bug/", "destination": "/blog/legacy-flexbox-invisible-float-bug/" },
      { "source": "/browser-search-engine-shortcuts/", "destination": "/blog/browser-search-engine-shortcuts/" }
    ]
  }
}
